			<div class="panel-body"> 
        <form action="/" method="post" >
          <div class="input-group date col-sm-12" data-provide="datepicker">
            <label for="date">Date: </label>
            <input name="date" id="date" class="form-control" type="date" value="{{ date }}"/>
      
         </div>
          <div class="input-group time col-sm-12" >

            <label for="time">Temps: </label>
            <input name="time" id="time" class="form-control" type="time" />
          </div>
          <div>&nbsp;</div>
          <div>
          {{#if error.date}}
                  <div class="alert alert-danger" role="alert">
                  <small>{{error.date}}</small>   
                  </div>            
          {{/if}}

          {{#if success.date}}
                  <div class="alert alert-success" role="alert">
                  <small>{{success.date}}</small>   
                  </div>            
          {{/if}}

          {{#if error.time}}
                  <div class="alert alert-danger" role="alert">
                  <small>{{error.time}}</small>   
                  </div>            
          {{/if}}

          {{#if success.time}}
                  <div class="alert alert-success" role="alert">
                  <small>{{success.time}}</small>   
                  </div>            
          {{/if}}
          </div>
          <div class="form-group" >
          <button type="submit" class="btn btn-info pull-right">Submit</button>
